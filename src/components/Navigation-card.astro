---
import Button from "./Button.astro";
const { title, text } = Astro.props;
---

<div>
  <h3>{title}</h3>
  <p>{text}</p>
  <Button buttonText="Opret playliste" />
</div>

<style>
  div {
    background-color: var(--grey);
    border-radius: 8px;
    padding: var(--spacing-medium);
    margin-bottom: var(--spacing-medium);
  }
</style>
